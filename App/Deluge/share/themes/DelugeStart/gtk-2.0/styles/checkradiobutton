	stretch				= TRUE
          file            			= "Check-Radio/checklight.png"
          border          		= { 2, 2, 2, 2 }
        }
    }
}


class "GtkRadioButton"     		style "radiobutton"
class "GtkRadioMenuItem"      style "radiobutton"
class "GtkCheckButton"        style "checkbutton"
class "GtkCheckMenuItem"	    style "checkbutton"
