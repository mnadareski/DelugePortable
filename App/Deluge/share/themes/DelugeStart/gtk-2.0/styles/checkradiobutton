 image
	{
            function        		= OPTION
            recolorable     		= TRUE
            state 				= INSENSITIVE
            shadow         		= OUT
            overlay_file    		= "Check-Radio/option1.png"
            overlay_stretch 	= FALSE
        }
 image
	{
            function        		= OPTION
            recolorable     		= TRUE
		state 						= NORMAL
